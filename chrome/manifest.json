{
  "manifest_version": 3,
  "name": "Ez Screenshot",
  "version": "1.0",
  "description": "A simple screenshot extension which also allows you to share captured image easily.",
  "permissions": ["activeTab", "clipboardWrite"],
  "action": {
    "default_icon": "./icons/icon48.png",
    "default_title": "Take a screenshot",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Open Ez Screenshot popup"
    }
  }
}
