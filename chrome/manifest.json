{
  "manifest_version": 3,
  "name": "Ez Screenshot",
  "version": "1.0",
  "description": "A simple screenshot extension which also allows you to share captured image easily.",
  "permissions": ["activeTab", "scripting", "clipboardWrite", "storage"],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Take a screenshot",
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "commands": {
    "take-screenshot": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Open Ez Screenshot popup"
    }
  }
}
